{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "globals": {
    "__DEV__": true,
    "__PRERELEASE__": true
  },
  "rules": {
    "new-cap": [2, {
      "newIsCap": true,
      "capIsNew": false
    }],
    "indent": [2, 2, {"SwitchCase": 1}],
    "max-len": [2, 80, 2],
    "max-depth": [2, 2],
    "max-nested-callbacks": [2, 1],
    "max-params": [2, 5],
    "max-statements": [2, 20],
    "complexity": [2, 3],
    "react/display-name": 2,
    "react/sort-comp": [2, {
      "order": [
        "constructor",
        "displayName",
        "propTypes",
        "contextTypes",
        "childContextTypes",
        "mixins",
        "statics",
        "defaultProps",
        "getDefaultProps",
        "state",
        "getInitialState",
        "getChildContext",
        "routerWillLeave",
        "componentWillMount",
        "componentDidMount",
        "componentWillReceiveProps",
        "shouldComponentUpdate",
        "componentWillUpdate",
        "componentDidUpdate",
        "componentWillUnmount",
        "/^on.+$/",
        "/^get.+$/",
        "/^set.+$/",
        "/^is.+$/",
        "/^render.+$/",
        "render"
      ]
    }]
  }
}
